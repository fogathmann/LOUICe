<?xml version="1.0" encoding="utf-8"?>
<views:CollectionView xmlns:fx="http://ns.adobe.com/mxml/2009"
                     xmlns:s="library://ns.adobe.com/flex/spark"
                     xmlns:mx="library://ns.adobe.com/flex/mx"
                     xmlns:components="com.cenix.louice.shared.ui.components.*"
                    xmlns:view="org.everest.flex.ui.views.*"

                     title="Experiment Metadata"
                     newMemberView="{NewExperimentMetaDataView}"
                     width="100%" height="100%" xmlns:maps1="org.everest.flex.maps.*" xmlns:components1="org.everest.flex.ui.components.*" xmlns:views="org.everest.flex.ui.views.*"  >
    <fx:Script>
        <![CDATA[
            import com.cenix.louice.shared.model.vos.SubprojectMember;
            
            import org.everest.flex.ui.presenters.SuggestionDropDownListPresentationModel;
            import org.everest.flex.ui.views.CollectionView;

            protected function templateButton_clickHandler(event:MouseEvent):void
            {
                navigateToURL( 
                    new URLRequest("http://trac/cenix/wiki/General/ExperimentMetadataTemplates"));
            }

            private function intIgnoreZeroLabelFunction(item:Object, column:*):String
            {
                var value:* = item[column.dataField];
                if (value != 0)
                {
                    return value;
                }else{
                    return '';
                }
            }
            
        ]]>
    </fx:Script>

    <fx:Declarations>
        <maps1:SuggestionEventMap
            dispatcher="{subprojectInput}"
            presenter="{SuggestionDropDownListPresentationModel}"
            view="{SuggestionDropDownListView}"/>
        <maps1:SuggestionEventMap
            dispatcher="{projectInput}"
            presenter="{SuggestionDropDownListPresentationModel}"
            view="{SuggestionDropDownListView}"/>
    </fx:Declarations>

    <view:filterFormContent>
        <s:FormItem label="Project">
            <components1:SuggestionDropDownListView
                id="projectInput"
                url="/projects"
                name="subproject.project"
                operator="equal-to"
                criteria="{model.criteria}"
                width="220"
                defaultChoice="true"/>
        </s:FormItem>
        <s:FormItem label="Subproject">
            <components1:SuggestionDropDownListView
                id="subprojectInput"
                url="{projectInput.selectedItem.value ? projectInput.selectedItem.value + 'subprojects' : '/subprojects/?q=active:equal-to:true'}"
                name="subproject"
                operator="equal-to"
                criteria="{model.criteria}"
                width="306"
                defaultChoice="true"/>
        </s:FormItem>
    </view:filterFormContent>

    <view:collectionGridColumns>
        <s:GridColumn headerText="Label" dataField="label" >
            <s:itemRenderer>
                <fx:Component>
                    <s:DefaultGridItemRenderer
                        fontWeight="bold"/>
                </fx:Component>
            </s:itemRenderer>
        </s:GridColumn>
        <s:GridColumn
            headerText="Subproject" dataField="subproject"
            labelFunction="{SubprojectMember.dataGridLabelFunction}"/>
        <s:GridColumn dataField="ticket_number" headerText="Ticket"
                      labelFunction="{intIgnoreZeroLabelFunction}">
            <s:itemRenderer>
                <fx:Component>
                    <s:DefaultGridItemRenderer fontWeight="bold"/>
                </fx:Component>
            </s:itemRenderer>
        </s:GridColumn>        
        <s:GridColumn
            headerText="Creation Date" dataField="creation_date"
            labelFunction="{CollectionView.dateTimeLabelFunction}" width="150">
            <s:itemRenderer>
                <fx:Component>
                    <s:DefaultGridItemRenderer
                        textAlign="right"/>
                </fx:Component>
            </s:itemRenderer>
        </s:GridColumn>
        <s:GridColumn
            headerText="Replicates" dataField="number_replicates" width="110">
            <s:itemRenderer>
                <fx:Component>
                    <s:DefaultGridItemRenderer textAlign="center"/>
                </fx:Component>
            </s:itemRenderer>
        </s:GridColumn>
    </view:collectionGridColumns>

    <view:footerContent>
        <s:Button icon="@Embed(source='/assets/icons/download.png')"
                  label="Download Excel Templates"
                  id="templateButton"
                  click="templateButton_clickHandler(event)" />
    </view:footerContent>
</views:CollectionView>