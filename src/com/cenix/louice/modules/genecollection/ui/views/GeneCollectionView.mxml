<?xml version="1.0" encoding="utf-8"?>
<views:CollectionView xmlns:fx="http://ns.adobe.com/mxml/2009"
                     xmlns:s="library://ns.adobe.com/flex/spark"
                     xmlns:mx="library://ns.adobe.com/flex/mx"
                     xmlns:components="com.cenix.louice.shared.ui.components.*"
                    xmlns:view="org.everest.flex.ui.views.*"
                     
                     title="Genes" showCsvButton="true"
                     width="100%" height="100%" xmlns:maps1="org.everest.flex.maps.*" xmlns:components1="org.everest.flex.ui.components.*" xmlns:views="org.everest.flex.ui.views.*"  >
    <fx:Script>
        <![CDATA[
            import org.everest.flex.ui.presenters.SuggestionDropDownListPresentationModel;
        ]]>
    </fx:Script>

    <fx:Declarations>
        <maps1:SuggestionEventMap
            dispatcher="{speciesInput}"
            presenter="{SuggestionDropDownListPresentationModel}"
            view="{SuggestionDropDownListView}"
            />
    </fx:Declarations>

    <view:filterFormContent>
        <s:FormItem label="Accession" width="100%">
            <components1:SmartTextArea
                id="accessionInput" restrict="a-zA-Z0-9 ,"
                name="accession"
                operator="equal-to"
                criteria="{model.criteria}"/>
        </s:FormItem>
        <s:FormItem label="Name" width="100%">
            <components1:SmartTextArea
                id="nameInput" restrict="a-zA-Z0-9 ,"
                name="locus-name"
                operator="contains"
                criteria="{model.criteria}"/>
        </s:FormItem>
        <s:FormItem label="Species">
            <components1:SuggestionDropDownListView
                id="speciesInput"
                url="/species"
                name="species"
                operator="equal-to"
                criteria="{model.criteria}"
                width="96" />
        </s:FormItem>
    </view:filterFormContent>
    <view:collectionGridColumns>
            <s:GridColumn headerText="Accession"
                                       dataField="accession"/>
            <s:GridColumn headerText="Name"
                                       dataField="locus_name"/>
            <s:GridColumn
                headerText="Species" dataField="species"
                itemRenderer="org.everest.flex.ui.renderers.DataGridLinkRenderer"/>
    </view:collectionGridColumns>
</views:CollectionView>
