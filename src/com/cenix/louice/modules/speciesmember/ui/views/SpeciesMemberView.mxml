<?xml version="1.0" encoding="utf-8"?>
<views1:MemberView xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:mx="library://ns.adobe.com/flex/mx"
                   xmlns:components="com.cenix.louice.shared.ui.components.*"
                   xmlns:views="com.cenix.louice.modules.devicemember.ui.views.*"
                   xmlns:view="org.everest.flex.ui.views.*"
                   xmlns:components1="org.everest.flex.ui.components.*"
                   xmlns:views1="org.everest.flex.ui.views.*"
                   width="100%" height="100%"
                   title="{'Species: ' + model.title}">

    <view:content>
        <s:Form width="100%">
            <s:FormItem width="100%" label="Genus Name">
                <s:Label text="{model.genus_name}"/>
            </s:FormItem>
            <s:FormItem width="100%" label="Species Name">
                <s:Label text="{model.species_name}"/>
            </s:FormItem>
            <s:FormItem width="100%" label="Common Name">
                <s:Label text="{model.common_name}"/>
            </s:FormItem>
            <s:FormItem width="100%" label="Acronym">
                <s:Label text="{model.acronym}"/>
            </s:FormItem>
            <s:FormItem width="100%" label="NCBI Taxonomy Id">
                <s:Label text="{model.ncbi_tax_id}"/>
            </s:FormItem>

            <s:FormItem width="100%" label="Genes">
                <components1:MemberLinkButton link="{model.genes}"/>
            </s:FormItem>
        </s:Form>
    </view:content>

</views1:MemberView>