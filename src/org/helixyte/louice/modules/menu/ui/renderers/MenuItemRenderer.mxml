<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                width="100%" height="72">
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle"
                            paddingTop="4" paddingBottom="4"
                            paddingLeft="4" paddingRight="4" />
    </s:layout>
    <mx:Image width="64" height="64"
              source="{data.imageUrl}" id="icon" />
    <s:VGroup width="100%" height="64" horizontalAlign="left"
              verticalAlign="top" gap="0" paddingTop="5" >
        <s:Label text="{data.title}" fontWeight="bold"
                 width="100%" textAlign="left"/>
        <mx:Text text="{data.description}" height="100%"
                 width="100%" textAlign="left"
                 fontWeight="normal" fontStyle="italic"
                 selectable="false" />
    </s:VGroup>
</s:ItemRenderer>